  <h1 style="text-align: center;">Welcome user</h1>
  
  <div class="container">
    <% if (logoutMessage) { %>
      <div class="alert alert-success">
        <%= logoutMessage %>
      </div>
    <% } %>
    
    <!-- Rest of the loginReg.ejs content -->
  </div>
  <div class="container">
    <div>
      <button id="login-btn">Login</button>
      <span>Already a registered user? Click here to login.</span>
    </div>
    <div>
      <button id="register-btn">Register</button>
      <span>New user? Register here.</span>
    </div>
  </div>
  
  <div id="login" class="hidden">
    <h2>Login</h2>
    <form id="login-form" method="POST" action="/forum">
      <label for="email">Email:</label >
      <input type="email" id="login-email" name="email" required><br>

      <label for="password">Password:</label>
      <input type="password" id="login-password" name="password" required><br>

      <input type="submit" value="Login">
    </form>
  </div>

  <div id="register" class="hidden">
    <h2>Register</h2>
    <form id="register-form" method="POST" >
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required><br>
  
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required><br>
  
      <label for="phone">Phone:</label>
      <input type="tel" id="phone" name="phone" pattern="[0-9]{10}" placeholder="123-456-7890" required><br>
  
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required><br>
  
      <input type="submit" value="Register">
    </form>
  </div>
  
 

  
  
  
  
  
